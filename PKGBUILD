pkgname=dwmctl
pkgver=0.0.2010.02.13
pkgrel=1
pkgdesc="Startup and shutdown script for dwm."
url='http://bbs.archlinux.org/viewtopic.php?pid=708445#p708445'
arch=(any)
license=('GPL')
depends=('dwm')
source=(dwmctl)

build() {
  install -m755 -D $srcdir/dwmctl  $pkgdir/usr/bin/dwmctl
}
md5sums=('06dd0c18233b173b714e86b75c8bd6d6')
